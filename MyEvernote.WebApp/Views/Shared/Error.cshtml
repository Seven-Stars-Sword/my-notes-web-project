@using MyEvernote.Entities.Messages
@using MyEvernote.Entities.ViewModels

@model ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/login-register.css" rel="stylesheet" />

<div class="container">
    <div class="wrapper">
        <div class="form-signin">
            <h3 class="form-signin-heading">@Model.Header...</h3>
            <hr class="colorgraph"><br>

            <div class="text-danger">
                <h3><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h3>
                <hr />
                <p class="text-justify">
                    @foreach (ErrorMessageObj msj in Model.Items)
                    {
                        @msj.Message <br />
                    }
                </p>
            </div>

        </div>
    </div>
</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = " setTimeout(function () { window.location = '" + Model.RedirectingUrl + "';" +
                    " }, " + Model.RedirectingTimeOut + ");";
    }
}

<script>
    $(function () {
        @Html.Raw(js);
    });
</script>

