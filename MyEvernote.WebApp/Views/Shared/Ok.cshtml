@using MyEvernote.Entities.ViewModels
@model OkViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/login-register.css" rel="stylesheet" />

<div class="container">
    <div class="wrapper">
        <div class="form-signin">
            <h3 class="form-signin-heading">@Model.Header...</h3>
            <hr class="colorgraph"><br>

            <div class="text-success">
                <h3><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title <br />
                    @if (TempData["activeUser"] != null)
                    {
                        @("Hoşgeldin"+ TempData["activeUser"])
                    }
                </h3>
                <hr />
                <p class="text-justify">
                    @foreach (string msj in Model.Items)
                    {
                        @msj <br />
                    }
                </p>
            </div>

        </div>
    </div>
</div>

@{ 
    string js = string.Empty;
    if(Model.IsRedirecting)
    {
        js = " setTimeout(function () { window.location = '" + Model.RedirectingUrl + "';" +
                    " }, " + Model.RedirectingTimeOut + ");";
    }
}

<script>
    $(function () {
        @Html.Raw(js);
    });
</script>

